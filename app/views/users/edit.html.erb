<div class="usa-grid usa-width-one-half" id="profile-page-main-cont">
  <!-- put the flash up on a proper condition and clean it up in a div with style -->
  <%= flash[:notice] %>
  <div id="profile-info-cont">
    <div>
      <span class="profile-username-header">Edit Your Profile</span>
      <p>Choose your profile image:</p>
      <%= image_tag @user.avatar.url(:medium), id: "profile-photo-cont" %>
      <% if signed_in? && @user.id == current_user.id %>
        <%= form_for @user, url: user_path(current_user.id), html: { multipart: true } do |form| %>
          <%= form.file_field :avatar %>
          <%= submit_tag "Upload" %>
        <% end %>
      <% end %>
    </div>
    <% if signed_in? && @user.id != current_user.id && !friend?(@user.id) %>
    <%= button_to "Add Contact", friendships_path(add_id: @user.id), method: :post %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% end %>
  </div>

  <%= form_for :user, url: '/users' do |f| %>
    First Name: <%= f.text_field :username, class: 'auth-inputs' %><br>
    Last Name: <%= f.text_field :email, class: 'auth-inputs' %><br>
    City: <%= f.password_field :password, class: 'auth-inputs' %><br>
    State: <%= f.password_field :password_confirmation, class: 'auth-inputs' %><br>
    Country: <%= f.text_field :username, class: 'auth-inputs' %><br>
    Ideology: <%= f.text_field :username, class: 'auth-inputs' %><br>
    Party Affiliation: <%= f.text_field :username, class: 'auth-inputs' %><br>
    Privacy Options: <%= f.text_field :username, class: 'auth-inputs' %><br>
    <%= f.submit "Save" %>
  <% end %>

</div>
