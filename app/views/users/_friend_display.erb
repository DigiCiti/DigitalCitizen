<% if friendship.user_id == @user.id %>
  <% @contact_id = friendship.friended_user %>
<% else %>
  <% @contact_id = friendship.user_id %>
<% end %>
<% contact = User.find(@contact_id) %>
<%= image_tag contact.avatar.url(:mini), class: "hub-user-avatar-mini" %>
<%= link_to(contact.username, user_path(@contact_id)) %>
